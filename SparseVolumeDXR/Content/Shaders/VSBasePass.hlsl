//--------------------------------------------------------------------------------------
// Structs
//--------------------------------------------------------------------------------------
struct VSIn
{
	float3	Pos	: POSITION;
	float3	Nrm	: NORMAL;
};

//--------------------------------------------------------------------------------------
// Constant buffer
//--------------------------------------------------------------------------------------
cbuffer cbMatrices
{
	matrix g_worldViewProj;
};

//--------------------------------------------------------------------------------------
// Base vertex processing
//--------------------------------------------------------------------------------------
float4 main(VSIn input) : SV_POSITION
{
	return mul(float4(input.Pos, 1.0), g_worldViewProj);
}
